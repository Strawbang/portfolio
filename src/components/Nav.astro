---
import Icon from "./Icon.astro";
import ThemeToggle from "./ThemeToggle.astro";
import type { iconPaths } from "./IconPaths";
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';
import LanguagePicker from '../components/LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

/** Main menu items */
const textLinks: { label: string; href: string }[] = [
  { label: t('nav.home'), href: translatePath('/') },
  { label: t('nav.work'), href: translatePath('/work/') },
  { label: t('nav.about'), href: translatePath('/about/') },
  { label: t('nav.blog'), href: translatePath('/blog/') },
];

/** Icon links to social media â€” edit these with links to your profiles! */
const iconLinks: {
  label: string;
  href: string;
  icon: keyof typeof iconPaths;
}[] = [
  {
    label: "Twitter",
    href: "https://twitter.com/strawbang",
    icon: "twitter-logo",
  },
  {
    label: "Instagram",
    href: "https://instagram.com/strawbang",
    icon: "instagram-logo",
  },
  {
    label: "Linkedin",
    href: "https://www.linkedin.com/in/djamel-bougouffa",
    icon: "linkedin-logo",
  },
  {
    label: "GitHub",
    href: "https://github.com/strawbang",
    icon: "github-logo",
  },
  {
    label: "Dev",
    href: "https://dev.to/strawbang",
    icon: "dev-logo",
  },
  {
    label: "Medium",
    href: "https://medium.com/@strawbang",
    icon: "medium-logo",
  },
];
---

<nav>
  <div class="menu-header">
    <a href="/" class="site-title">
      <Icon
        icon="terminal-window"
        color="var(--accent-regular)"
        size="1.6em"
        gradient
      />
      Djamel Bougouffa
    </a>
    <div class="header-actions">
      <menu-button>
        <template>
          <button class="menu-button" aria-expanded="false" aria-label="Menu">
            <span class="hamburger">
              <span></span>
              <span></span>
              <span></span>
            </span>
          </button>
        </template>
      </menu-button>
    </div>
  </div>

  <div id="menu-overlay" aria-hidden="true"></div>

  <div id="menu-content">
    <ul class="nav-items">
      {
        textLinks.map(({ label, href }) => (
          <li>
            <a
              aria-current={Astro.url.pathname === href}
              class:list={[
                "link",
                {
                  active:
                    Astro.url.pathname === href ||
                    (href !== translatePath('/') && Astro.url.pathname.startsWith(href)),
                },
              ]}
              href={href}
            >
              {label}
            </a>
          </li>
        ))
      }
    </ul>

    <div class="mobile-bottom-bar">
      <LanguagePicker />
      <div class="socials">
        {
          iconLinks.map(({ href, icon, label }) => (
            <a href={href} class="social">
              <span class="sr-only">{label}</span>
              <Icon icon={icon} />
            </a>
          ))
        }
      </div>
      <div class="theme-toggle">
        <ThemeToggle />
      </div>
    </div>
  </div>
</nav>

<script>
  class MenuButton extends HTMLElement {
    constructor() {
      super();

      this.appendChild(this.querySelector("template")!.content.cloneNode(true));
      const btn = this.querySelector("button")!;
      const menu = document.getElementById("menu-content")!;
      const overlay = document.getElementById("menu-overlay")!;
      const nav = btn.closest("nav")!;

      menu.hidden = true;

      const setExpanded = (expand: boolean) => {
        btn.setAttribute("aria-expanded", expand ? "true" : "false");
        menu.hidden = !expand;
        overlay.setAttribute("aria-hidden", expand ? "false" : "true");
        nav.classList.toggle("menu-open", expand);
        document.body.classList.toggle("menu-open", expand);
      };

      btn.addEventListener("click", () => {
        const isOpen = btn.getAttribute("aria-expanded") === "true";
        setExpanded(!isOpen);
      });

      overlay.addEventListener("click", () => setExpanded(false));

      menu.querySelectorAll(".nav-items .link").forEach((link) => {
        link.addEventListener("click", () => setExpanded(false));
      });

      const handleViewports = (e: MediaQueryList | MediaQueryListEvent) => {
        if (e.matches) {
          menu.hidden = false;
          overlay.setAttribute("aria-hidden", "true");
          nav.classList.remove("menu-open");
          document.body.classList.remove("menu-open");
          btn.hidden = true;
        } else {
          menu.hidden = true;
          btn.hidden = false;
          btn.setAttribute("aria-expanded", "false");
        }
      };
      const mediaQueries = window.matchMedia("(min-width: 50em)");
      handleViewports(mediaQueries);
      mediaQueries.addEventListener("change", handleViewports);
    }
  }
  customElements.define("menu-button", MenuButton);
</script>

<style>
  :global(body.menu-open) {
    overflow: hidden;
  }

  nav {
    z-index: 9999;
    position: relative;
    font-family: var(--font-brand);
    font-weight: 500;
    margin-bottom: 3.5rem;
  }

  .menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.25rem;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .site-title {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    line-height: 1.1;
    color: var(--gray-0);
    text-decoration: none;
  }

  /* Hamburger button */
  .menu-button {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 0;
    border-radius: 999rem;
    width: 2.75rem;
    height: 2.75rem;
    color: var(--gray-300);
    background: radial-gradient(var(--gray-900), var(--gray-800) 150%);
    box-shadow: var(--shadow-md);
    cursor: pointer;
    flex-shrink: 0;
  }

  .menu-button::before {
    position: absolute;
    inset: -1px;
    content: "";
    background: var(--gradient-stroke);
    border-radius: 999rem;
    z-index: -1;
  }

  .menu-button[hidden] {
    display: none;
  }

  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 20px;
    height: 20px;
  }

  .hamburger span {
    display: block;
    width: 100%;
    height: 2px;
    background: currentColor;
    border-radius: 2px;
    transition: transform 0.3s ease, opacity 0.3s ease;
    transform-origin: center;
  }

  .menu-button[aria-expanded="true"] .hamburger span:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }
  .menu-button[aria-expanded="true"] .hamburger span:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }
  .menu-button[aria-expanded="true"] .hamburger span:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Overlay */
  #menu-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    z-index: 998;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  nav.menu-open #menu-overlay {
    display: block;
    opacity: 1;
  }

  /* Menu panel */
  #menu-content {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: min(85vw, 320px);
    background: var(--gray-999);
    z-index: 999;
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.3);
    padding-top: env(safe-area-inset-top, 0);
    padding-bottom: env(safe-area-inset-bottom, 0);
  }

  #menu-content:not([hidden]) {
    transform: translateX(0);
  }

  #menu-content[hidden] {
    display: flex !important;
    transform: translateX(100%);
    pointer-events: none;
  }

  .nav-items {
    margin: 0;
    display: flex;
    flex-direction: column;
    list-style: none;
    padding: 5rem 1.5rem 1.5rem;
    flex: 1;
    overflow-y: auto;
    gap: 0;
  }

  .nav-items li {
    border-bottom: 1px solid var(--gray-800);
  }

  .nav-items li:first-child {
    border-top: 1px solid var(--gray-800);
  }

  .link {
    display: flex;
    align-items: center;
    padding: 1rem 0.5rem;
    color: var(--gray-300);
    text-decoration: none;
    font-size: var(--text-lg);
    transition: color 0.2s ease, padding-left 0.2s ease;
  }

  .link:active {
    color: var(--accent-regular);
  }

  .link.active {
    color: var(--gray-0);
    padding-left: 1rem;
    border-left: 3px solid var(--accent-regular);
  }

  /* Bottom bar mobile */
  .mobile-bottom-bar {
    --icon-size: var(--text-xl);
    --icon-padding: 0.5rem;

    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    padding: 1rem 1.25rem;
    border-top: 1px solid var(--gray-800);
    background: var(--gray-999);
    flex-shrink: 0;
  }

  .socials {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    font-size: var(--icon-size);
  }

  .social {
    display: flex;
    padding: var(--icon-padding);
    text-decoration: none;
    color: var(--accent-dark);
    transition: color var(--theme-transition);
  }

  .social:hover,
  .social:focus {
    color: var(--accent-text-over);
  }

  .theme-toggle {
    display: flex;
    align-items: center;
    height: calc(var(--icon-size) + 2 * var(--icon-padding));
    flex-shrink: 0;
  }

  @media (min-width: 50em) {
    nav {
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      align-items: center;
      padding: 2.5rem 5rem;
      gap: 1rem;
    }

    .menu-header {
      padding: 0;
    }

    .site-title {
      font-size: var(--text-lg);
    }

    #menu-overlay {
      display: none !important;
    }

    #menu-content {
      position: static;
      display: contents !important;
      transform: none;
      width: auto;
      background: transparent;
      box-shadow: none;
      pointer-events: auto;
    }

    #menu-content[hidden] {
      display: contents !important;
      transform: none;
      pointer-events: auto;
    }

    .nav-items {
      position: relative;
      flex-direction: row;
      font-size: var(--text-sm);
      border-radius: 999rem;
      border: 0;
      padding: 0.5rem 0.5625rem;
      background: radial-gradient(var(--gray-900), var(--gray-800) 150%);
      box-shadow: var(--shadow-md);
      flex: none;
      overflow: visible;
      gap: 0;
    }

    .nav-items li {
      border: none;
    }

    .nav-items li:first-child {
      border: none;
    }

    .nav-items::before {
      position: absolute;
      inset: -1px;
      content: "";
      background: var(--gradient-stroke);
      border-radius: 999rem;
      z-index: -1;
    }

    .link {
      padding: 0.5rem 1rem;
      border-radius: 999rem;
      font-size: var(--text-sm);
      border-left: none;
      transition: color var(--theme-transition),
        background-color var(--theme-transition);
    }

    .link:hover,
    .link:focus {
      color: var(--gray-100);
      background-color: var(--accent-subtle-overlay);
    }

    .link.active {
      color: var(--accent-text-over);
      background-color: var(--accent-regular);
      padding-left: 1rem;
      border-left: none;
    }

    .mobile-bottom-bar {
      --icon-padding: 0.375rem;

      justify-self: flex-end;
      align-items: center;
      padding: 0;
      background-color: transparent;
      border-top: none;
      gap: 0.75rem;
    }

    .socials {
      display: none;
    }
  }

  @media (min-width: 60em) {
    .socials {
      display: flex;
      justify-content: flex-end;
      gap: 0;
    }
  }

  @media (forced-colors: active) {
    .link.active {
      color: SelectedItem;
    }
  }
</style>
