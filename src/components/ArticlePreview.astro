---
import type { Article } from '../types/article';

export interface Props {
  article: Article;
}

const { article } = Astro.props;

const DEFAULT_IMAGES: Record<string, string> = {
  'Dev.to': '/assets/devto-logo.png',
  'Medium': '/assets/medium-logo.png',
  'Blog': '/assets/blog-logo.png',
  fallback: '/assets/placeholder-article.jpg'
};

const imageUrl = article.imageUrl || DEFAULT_IMAGES[article.platform] || DEFAULT_IMAGES.fallback;

---

<article class="card">
  <a href={article.url} target={article.platform === 'Blog' ? '_self' : '_blank'} rel={article.platform === 'Blog' ? '' : 'noopener noreferrer'} class="card-link">
    <div class="image-container">
      <img 
        src={imageUrl} 
        alt={`Image pour l'article: ${article.title}`} 
        loading="lazy" 
        width="300"
        height="150"
      />
      <div class="platform-badges">
        {(article.platforms ?? [article.platform]).map(p => (
          <span class="platform-badge">{p}</span>
        ))}
      </div>
    </div>
    <header>
      <h3 class="title">{article.title}</h3>
    </header>
    <p class="description">{article.description}</p>
    <footer>
      <time datetime={article.publishDate.toISOString()}>
        {article.publishDate.toLocaleDateString()}
      </time>
    </footer>
  </a>
</article>

<style>
  .card {
    height: 100%;
    border-radius: 0.5rem;
    background-color: var(--gray-999);
    border: 1px solid var(--gray-800);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    overflow: hidden;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
  }

  .card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 1rem;
    color: inherit;
    text-decoration: none;
  }

  .image-container {
    position: relative;
    width: 100%;
    height: 150px;
    margin-bottom: 1rem;
    border-radius: 0.3rem;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .platform-badges {
    position: absolute;
    bottom: 0;
    right: 0;
    display: flex;
    gap: 0.15rem;
  }

  .platform-badge {
    background-color: var(--accent-regular);
    color: var(--accent-text-over);
    padding: 0.2rem 0.5rem;
    font-size: var(--text-xs);
  }

  .platform-badge:first-child {
    border-top-left-radius: 0.3rem;
  }

  .platform-badges:has(.platform-badge:nth-child(2)) .platform-badge:last-child {
    background-color: var(--accent-dark);
  }

  .title {
    font-size: var(--text-lg);
    color: var(--gray-200);
    margin-top: 0.5rem;
    transition: color 0.2s ease;
  }

  .card:hover .title {
    color: var(--accent-regular);
  }

  .description {
    margin-top: 0.5rem;
    color: var(--gray-300);
    flex-grow: 1;
    font-size: var(--text-sm);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  footer {
    margin-top: 1rem;
    display: flex;
    justify-content: flex-end;
    color: var(--gray-400);
    font-size: var(--text-sm);
  }
</style>