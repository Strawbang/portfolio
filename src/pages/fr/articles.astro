---
import BaseLayout from "../../layouts/FrenchBaseLayout.astro";
import ArticlePreview from "../../components/ArticlePreview.astro";
import { fetchArticles } from "../../services/articles";

// Récupérer tous les articles
const articles = await fetchArticles();
---

<BaseLayout
  title="Articles | Portfolio - Développeur Full-Stack"
  description="Découvrez mes articles publiés sur Medium et Dev.to sur le développement web, TypeScript, React, Node.js et plus encore."
>
  <div class="wrapper stack gap-20">
    <header class="section-header stack gap-2 lg:gap-4">
      <h1>Mon Blog</h1>
      <p>Voici tous mes articles publiés sur Medium et Dev.to.</p>
    </header>

    <ul class="gallery">
      {
        articles.map((article) => (
          <li>
            <ArticlePreview article={article} />
          </li>
        ))
      }
    </ul>
  </div>
</BaseLayout>

<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    list-style-type: none;
    padding: 0;
    margin: 0;
  }
</style>